<h1><%= @user.name %>'s Events:</h1>

<% if !@user.created_events.nil? %>
    <ul>
        <% @user.created_events.each do | event | %>
            <li>
                <%= "#{event.name} is taking place on #{event.date} at #{event.location}" %>
            </li>
        <% end %>
    </ul>
<% else %>
    <p>There are currently no events!</p>
<% end %>

<h1><%= @user.name %>'s RSVPs:</h1>

<% if !@user.attended_event.empty? %>
    <ul>
        <% @user.attended_event.each do | event | %>
            <li>
                <%= "#{event.name}" %>
            </li>
        <% end %>
    </ul>
<% else %>
    <p>There are currently no events!</p>
<% end %>